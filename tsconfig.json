{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "libs/auth-lib": [
        "libs/auth-lib/src"
      ],
      "libs/auth-lib/*": [
        "libs/auth-lib/src/*"
      ],
      "libs/user-lib": [
        "libs/user-lib/src"
      ],
      "libs/user-lib/*": [
        "libs/user-lib/src/*"
      ],
      "libs/post-lib": [
        "libs/post-lib/src"
      ],
      "libs/post-lib/*": [
        "libs/post-lib/src/*"
      ]
    }
  }
}